{% include 'base.html.twig' %}

{% block stylesheets %}

    <head>
        <META HTTP-EQUIV="REFRESH" CONTENT="10;URL=http://127.0.0.1:8000/show/posts">
        <link rel="stylesheet"
              href="http://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.1.0/css/font-awesome.min.css"/>
        <link href="//netdna.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet"
              id="bootstrap-css">
        <script src="//netdna.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
        <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>

        <link href="{{ asset('build/app.css') }}" rel="stylesheet"/>
        <title></title>
    </head>
{% endblock %}

{% block body %}
    <div class="container">
        <div class="well">
            <div class="media" style="padding-top: 3%">

                <img src="{{ asset('build/nutrition.jpg') }}" class="img-circle" alt="Cinque Terre" width="304"
                     height="236">
                <div class="media-body">
                    <h1 class="text-primary" style="padding-top: 6% "> Modifier l'article</h1>
                    {{ form_start(form)  }}
                    {{ form_row(form.titre) }}
                    {{ form_row(form.contenu) }}
                    {{ form_row(form.auteur) }}
                    {{ form_row(form.image) }}

                    <button type="submit" class="btn btn-primary" style="margin-left: 40%">Mettre Ã  jour l'article</button>

                    {% for message in app.flashes('success') %}
                        <div class="alert alert-success">
                            {{ message }}
                        </div>
                    {% endfor %}
                    {{ form_end(form) }}
                    <ul class="list-inline list-unstyled">
                        <li><span><i class="glyphicon glyphicon-calendar"></i> 2 days, 8 hours </span></li>
                        <li>|</li>
                        <span><i class="glyphicon glyphicon-comment"></i>
                        {{ comments|length }} comments</span>
                        <li>|</li>
                        <li>
                            <span class="glyphicon glyphicon-star"></span>
                            <span class="glyphicon glyphicon-star"></span>
                            <span class="glyphicon glyphicon-star"></span>
                            <span class="glyphicon glyphicon-star"></span>
                            <span class="glyphicon glyphicon-star-empty"></span>
                        </li>
                        <li>|</li>
                        <li>
                            <!-- Use Font Awesome http://fortawesome.github.io/Font-Awesome/ -->
                            <span><i class="fa fa-facebook-square"></i></span>
                            <span><i class="fa fa-twitter-square"></i></span>
                            <span><i class="fa fa-google-plus-square"></i></span>
                        </li>
                    </ul>
                </div>
            </div>
            <br><br><br>
            {% include 'admin/commentsAdminView.html.twig' %}
        </div>
    </div>
{% endblock %}
